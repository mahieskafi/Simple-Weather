<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NameTextView">
        <item name="android:textSize">@dimen/card_view_name_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:textSize">@dimen/card_view_error_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RetryView">
        <item name="android:textSize">@dimen/card_view_retry_text_size</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">@dimen/card_view_title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SubTextViewInForecastCard">
        <item name="android:textSize">@dimen/forecast_card_view_sub_text_size</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="IconInForecastCard">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="TempTextView">
        <item name="android:textSize">@dimen/card_view_temp_text_size</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textSize">@dimen/card_view_description_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="LabelTextView">
        <item name="android:textSize">@dimen/card_view_label_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="FeelingHumidityTextView">
        <item name="android:textSize">@dimen/card_view_details_value_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="ForecastTimeTextView">
        <item name="android:textSize">@dimen/forecast_card_view_time_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="HeadlineTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContentProgressBar">
        <item name="android:colorAccent">@color/black</item>
    </style>
</resources>